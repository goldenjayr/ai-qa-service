// Prisma schema for saving results from main.py
generator client {
  provider = "prisma-client-js"
}

generator python {
  provider = "prisma-client-py"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model SiteHealthReport {
  id                 Int      @id @default(autoincrement())
  flow_name          String
  url                String
  service_type       String
  status             String
  healthScore        Float
  avgLatency         Int
  errorRate          Float
  aiSummary          String
  positiveHighlights String
  frictionPoints     String
  recommendations    String
  detailedFindings   String
  createdAt          DateTime @default(now())
}

model Service {
  id           Int    @id @default(autoincrement())
  name         String
  service_type String
}

model Issue {
  id                   Int      @id @default(autoincrement())
  flowName             String
  element              String
  pageUrl              String
  domSelector          String?
  action               String
  expected             String
  actual               String
  error                String?
  consoleNetworkErrors String?
  screenshot           String?
  severity             String?
  timestamp            String?
  stepsToReproduce     String   // Store as JSON string
  createdAt            DateTime @default(now())
}

